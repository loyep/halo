{
  "name": "kova",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn prisma:db:push",
    "build": "ssr build",
    "deploy": "ssr build && ssr deploy",
    "lint": "eslint . --ext .js,.tsx,.ts --cache",
    "lint:fix": "eslint . --ext .js,.tsx,.ts --cache --fix",
    "start": "ssr build && pm2 start pm2.config.js",
    "prisma:generate": "npx prisma generate",
    "prisma:db:push": "npx prisma db push",
    "dev": "ssr start",
    "seed": "ts-node prisma/seed.ts",
    "start:vite": "ssr start --vite",
    "start:nest": "nest start --watch",
    "stop": "pm2 stop pm2.config.js"
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.4",
    "@chakra-ui/react": "^1.6.7",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@nestjs/axios": "^0.0.1",
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.0.9",
    "@prisma/client": "^2.30.2",
    "ahooks": "^2.10.9",
    "antd": "^4.16.13",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "dayjs": "^1.10.6",
    "dplayer": "^1.26.0",
    "framer-motion": "^4",
    "ioredis": "^4.27.9",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0",
    "nprogress": "^0.2.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pm2": "^5.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "swiper": "^7.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@kova/ssr": "^0.0.9",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.6",
    "@types/bcrypt": "^5.0.0",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.7.10",
    "@types/nprogress": "^0.2.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "27.1.0",
    "less-vars-to-js": "^1.3.0",
    "prettier": "^2.3.2",
    "prisma": "^2.30.2",
    "prisma-dbml-generator": "^0.7.0",
    "rimraf": "^3.0.2",
    "start-server-webpack-plugin": "^2.2.5",
    "ts-jest": "^27.0.5",
    "ts-loader": "~8.3.0",
    "ts-node": "^10.2.1",
    "vite": "^2.5.2",
    "webpack-node-externals": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loyep/prism.git"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/kova(|/.*)$": "<rootDir>/libs/kova/src/$1"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue,css}": "prettier --write"
  }
}
